{
    "manifest_version": 3,
    "name": "Schoolbox+",
    "description": "A helper extension for schoolbox.",
    "version": "1.0",
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "index.js"
            ],
            "matches": [
                "https://*/*"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "embeds/grades.js"
            ],
            "matches": [
                "https://*/*"
            ]
        },
        {
            "resources": [
                "embeds/index.js"
            ],
            "matches": [
                "https://*/*"
            ]
        }
    ]
}